{
    "name": "chuoke/image-gallery",
    "description": "A unified package of images for access to image sites.",
    "keywords": [
        "chuoke",
        "image-gallery"
    ],
    "homepage": "https://github.com/chuoke/image-gallery",
    "license": "MIT",
    "authors": [
        {
            "name": "chuoke",
            "email": "chuokechungyoung@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "illuminate/http": "^8.49"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Chuoke\\ImageGallery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuoke\\ImageGallery\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
